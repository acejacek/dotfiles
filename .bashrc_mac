
# Homebrew
export PATH="/usr/local/bin:/usr/local/sbin:/usr/local/opt/coreutils/libexec/gnubin:$PATH"
export MANPATH="/usr/local/opt/coreutils/libexec/gnuman:$MANPATH"
source `brew --repository`/Library/Contributions/brew_bash_completion.sh

# Boot2docker
alias bdsi='$(boot2docker shellinit)'
alias bdsii='boot2docker shellinit'

# Git
[[ -s ~/bin/git-completion.bash ]] && . ~/bin/git-completion.bash
[[ -s ~/bin/git-prompt.sh ]] && . ~/bin/git-prompt.sh

# Gradle
export GRADLE_HOME=/usr/local/Cellar/gradle/1.9/libexec
export PROTOBUF_HOME=/usr/local/protobuf-2.4.1/
export PATH=$GRADLE_HOME/bin:$PROTOBUF_HOME/bin:$PATH

# Bash
if [[ -z $TERM ]]; then
    export TERM=xterm-256color
fi

# Autojump
[[ -s $(brew --prefix)/etc/autojump.sh ]] && . $(brew --prefix)/etc/autojump.sh

# Unison
#export UNISONLOCALHOSTNAME='stalker'

# Vim setting for "e" alias
export VIM_APP_DIR=/Applications

if [ "$DISPLAY" != "" ]; then
    L_VIM="mvim"
else
    if [ "$SSH_CONNECTION" = "" ]; then
	L_VIM="mvim"
    else
	L_VIM="/Applications/MacVim.app/Contents/MacOS/Vim"
    fi
fi 
export L_VIM

export L_PS1_HOST_COLOR="161"


