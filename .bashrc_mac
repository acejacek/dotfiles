# Gradle
export GRADLE_HOME=/usr/local/Cellar/gradle/1.9
export PATH=$GRADLE_HOME/bin:$PATH

# Unison
#export UNISONLOCALHOSTNAME='stalker'

# Vim setting for "e" alias
export VIM_APP_DIR=/Applications

if [ "$DISPLAY" != "" ]; then
    L_VIM="mvim"
else
    if [ "$SSH_CONNECTION" = "" ]; then
	L_VIM="mvim"
    else
	L_VIM="/Applications/MacVim.app/Contents/MacOS/Vim"
    fi
fi 
export L_VIM

export L_PS1_HOST_COLOR="161"

