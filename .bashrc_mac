# Shortcuts
alias cdap='cd /private/etc/apache2'
alias vimap='sudo vim /private/etc/apache2/httpd.conf'

# Shortcuts
alias cdpysites='cd /Library/Python/2.6/site-packages'
alias cddjango='cd /Library/Python/2.6/site-packages/django'
