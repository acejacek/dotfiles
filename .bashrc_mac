#           ALIASES           #
###############################


# Shortcuts
alias cdap='cd /private/etc/apache2'
alias vimap='sudo vim /private/etc/apache2/httpd.conf'

# Shortcuts
alias cdpysites='cd /Library/Python/2.6/site-packages'
alias cddjango='cd /Library/Python/2.6/site-packages/django'

# System
alias suspend='~/scripts/mac/veille.sh'

alias kstream="/Applications/VLC.app/Contents/MacOS/VLC qtcapture:// --sout='#transcode{vcodec=theo,vb=200,scale=0.5,acodec=none}:std{access=shout,mux=ogg,dst=source:bite@10.7.0.1:8000/sitaktif.ogg}'"
