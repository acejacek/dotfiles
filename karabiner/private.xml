<?xml version="1.0"?>
<root>
  <item>
    <name>Right-hand function key block to system volume controls</name>
    <appendix>* PrintScreen/ScrollLock/Pause --> Mute/Volume Down/Volume Up</appendix>
    <appendix>* Shift-PrintScreen/ScrollLock/Pause --> Play/Previous Song/Next Song</appendix>
    <appendix>* Cmd-PrintScreen/ScrollLock/Pause --> (unset)/Brightness Down/Brightness Up</appendix>
    <appendix>* Cmd-Ctrl-PrintScreen/ScrollLock/Pause --> (unset)/Brightness Down on alt monitor/Brightness Up on alt monitor</appendix>
    <appendix>* Alt-PrintScreen/ScrollLock/Pause --> (unset)/Monitors Menu/Monitors Menu</appendix>
    <identifier>remap.filco_printscreen_scrolllock_pause_to_volume_controls</identifier>
    <!-- Sound -->
    <autogen>__KeyToKey__ KeyCode::PC_PRINTSCREEN, ModifierFlag::NONE, ConsumerKeyCode::VOLUME_MUTE</autogen>
    <autogen>__KeyToKey__ KeyCode::PC_SCROLLLOCK,  ModifierFlag::NONE, ConsumerKeyCode::VOLUME_DOWN</autogen>
    <autogen>__KeyToKey__ KeyCode::PC_PAUSE,       ModifierFlag::NONE, ConsumerKeyCode::VOLUME_UP</autogen>
    <autogen>__KeyToKey__ KeyCode::PC_PRINTSCREEN, MODIFIERFLAG_EITHER_LEFT_OR_RIGHT_SHIFT, ConsumerKeyCode::MUSIC_PLAY</autogen>
    <autogen>__KeyToKey__ KeyCode::PC_SCROLLLOCK,  MODIFIERFLAG_EITHER_LEFT_OR_RIGHT_SHIFT, ConsumerKeyCode::MUSIC_PREV</autogen>
    <autogen>__KeyToKey__ KeyCode::PC_PAUSE,       MODIFIERFLAG_EITHER_LEFT_OR_RIGHT_SHIFT, ConsumerKeyCode::MUSIC_NEXT</autogen>
    <!-- Brightness -->
    <autogen>__KeyToKey__ KeyCode::PC_SCROLLLOCK,  MODIFIERFLAG_EITHER_LEFT_OR_RIGHT_COMMAND, ConsumerKeyCode::BRIGHTNESS_DOWN</autogen>
    <autogen>__KeyToKey__ KeyCode::PC_PAUSE,       MODIFIERFLAG_EITHER_LEFT_OR_RIGHT_COMMAND, ConsumerKeyCode::BRIGHTNESS_UP</autogen>
  </item>
</root>
